@model TicketsApp.Models.Event

@{
    ViewData["Title"] = "Create Event";  // Setting the page title to "Create Event"
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>  <!-- Display page title dynamically -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Styling for the page body */
        body {
            background-color: #E6F9F7; /* Light Teal */
            color: #FF6F61; /* Coral */
            font-family: 'Arial', sans-serif;
        }

        /* Header styling */
        h1 {
            text-align: center;
            margin-top: 40px;
            font-weight: bold;
            color: #1A4C7B; /* Navy Blue */
        }

        /* Form styling */
        form {
            background-color: #A1D8D0; /* Teal */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(255, 111, 97, 0.2);
        }

        label {
            font-weight: bold;
        }

        .form-control {
            border-radius: 8px;
        }

        /* Button styling */
        .btn-primary {
            background-color: #FF6F61; /* Coral */
            border: none;
            font-weight: bold;
            padding: 10px 20px;
        }

            /* Hover effect for the button */
            .btn-primary:hover {
                background-color: #E53A3A; /* Darker Coral */
            }

        a {
            color: #FF6F61; /* Coral */
            font-weight: bold;
        }

        /* Main container styling */
        .container {
            max-width: 700px;
            margin: 0 auto;
        }

        /* Margin for form groups */
        .form-group {
            margin-bottom: 1.5rem;
        }

        /* Error message styling */
        .text-danger {
            font-size: 0.9rem;
            margin-top: 5px;
        }

        /* Margin for the "Create" button */
        .mb-3 {
            margin-bottom: 1.25rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Create Event</h1>
        <hr />

        <!-- Form to create an event -->
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>  <!-- Display form validation errors -->
            <!-- Title input field -->
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>  <!-- Display validation error for Title -->
            </div>

            <!-- Description input field -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>  <!-- Display validation error for Description -->
            </div>

            <!-- Event Date input field -->
            <div class="form-group mb-3">
                <label asp-for="EventDateTime" class="control-label"></label>
                <input asp-for="EventDateTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="EventDateTime" class="text-danger"></span>  <!-- Display validation error for EventDateTime -->
            </div>

            <!-- Location input field -->
            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>  <!-- Display validation error for Location -->
            </div>

            <!-- Price input field -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>  <!-- Display validation error for Price -->
            </div>

            <!-- Category selection dropdown -->
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>  <!-- Display validation error for CategoryId -->
            </div>

            <!-- Image upload input -->
            <div class="form-group mb-3">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>  <!-- Display validation error for ImageFile -->
            </div>

            <!-- Submit button -->
            <div class="form-group mb-3 text-center">
                <input type="submit" value="Create Event" class="btn btn-primary px-5" />
            </div>
        </form>

        <!-- Link to navigate back to the list page -->
        <div class="text-center mt-3">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
