@model TicketsApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
      <!-- Set page title -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title> <!-- Dynamically insert the page title -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #E6F9F7; /* Light Teal */
            color: #FF6F61; /* Coral */
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 700px;
            margin: 50px auto;
            background-color: #A1D8D0; /* Teal */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
            color: #1A4C7B; /* Navy Blue */
        }

        .btn-danger {
            background-color: #FF6F61; /* Coral */
            border: none;
            font-weight: bold;
        }

            /* Hover effect for delete button */
            .btn-danger:hover {
                background-color: #E53A3A; /* Darker Coral */
            }

        .btn-secondary {
            background-color: #C7EAE2; /* Light Teal */
            border: none;
            color: #FF6F61; /* Coral */
            font-weight: bold;
        }

            /* Hover effect for cancel button */
            .btn-secondary:hover {
                background-color: #A1D8D0; /* Lighter Teal */
            }

        /* Description list styling */
        dl dt {
            font-weight: bold;
            color: #1A4C7B; /* Navy Blue */
        }

        dl dd {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Event</h1>
        <p>Are you sure you want to delete this event? This action cannot be undone.</p>

        <!-- Display event details -->
        <dl class="row">
            <dt class="col-sm-4">Title</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Date & Time</dt>
            <dd class="col-sm-8">@Model.EventDateTime</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">$@Model.Price</dd>
        </dl>

        <!-- Form to confirm deletion -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="EventId" />
            <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
