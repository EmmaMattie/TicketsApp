@model TicketsApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #F3D9E5; /* Pale Pink */
            color: #4A3267; /* Purple */
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 700px;
            margin: 50px auto;
            background-color: #F7B9D4; /* Light Pink */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .btn-danger {
            background-color: #DE638A;
            border: none;
        }

            .btn-danger:hover {
                background-color: #4A3267;
            }

        .btn-secondary {
            background-color: #C6BADE;
            border: none;
            color: #4A3267;
        }

        dl dt {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Event</h1>
        <p>Are you sure you want to delete this event?</p>

        <dl class="row">
            <dt class="col-sm-4">Title</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Date & Time</dt>
            <dd class="col-sm-8">@Model.EventDateTime</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">$@Model.Price</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EventId" />
            <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
