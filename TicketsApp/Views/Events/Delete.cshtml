@model TicketsApp.Models.Event

@{
    ViewData["Title"] = "Delete Event";
    <!-- Set page title -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #FDECEF; /* Soft Coral Pink */
            color: #1A4C7B; /* Deep Navy */
            font-family: 'Segoe UI', sans-serif;
        }

        .wrapper {
            padding: 50px 15px;
        }

        .card-box {
            max-width: 700px;
            margin: auto;
            background-color: #ffffff;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        }

        h1 {
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: #1A4C7B;
        }

        p {
            text-align: center;
            margin-bottom: 30px;
            color: #F28482;
            font-weight: 500;
        }

        dl dt {
            font-weight: bold;
            color: #1A4C7B;
        }

        dl dd {
            margin-bottom: 12px;
        }

        .btn-danger {
            background-color: #F28482;
            border: none;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 6px;
        }

            .btn-danger:hover {
                background-color: #dc5c5c;
            }

        .btn-secondary {
            background-color: #BFD7ED;
            color: #1A4C7B;
            border: none;
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 6px;
        }

            .btn-secondary:hover {
                background-color: #a6c9e4;
            }

        .button-row {
            text-align: center;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="card-box">
            <h1>Delete Event</h1>
            <p>Are you sure you want to delete this event? This action cannot be undone.</p>

            <dl class="row">
                <dt class="col-sm-4">Title</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Date & Time</dt>
                <dd class="col-sm-8">@Model.EventDateTime.ToString("f")</dd>

                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Model.Location</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">$@Model.Price</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="EventId" />
                <div class="button-row">
                    <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
