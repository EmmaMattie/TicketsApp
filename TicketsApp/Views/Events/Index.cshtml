@model IEnumerable<TicketsApp.Models.Event>

@{
    ViewData["Title"] = "Events";
      <!-- Title for the page -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom styling for the page */
        body {
            background-color: #F4F7F6; /* Light background */
            color: #1A4C7B; /* Navy Blue */
            font-family: 'Arial', sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 40px;
            font-weight: bold;
            color: #1A4C7B; /* Navy Blue */
        }

        .table {
            background-color: #4ECDC4; /* Turquoise */
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #FF6F61; /* Coral */
            color: white;
        }

        td {
            vertical-align: middle;
        }

        .btn {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #FF6F61; /* Coral */
            border: none;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #E53A3A; /* Darker Coral */
            }

        .btn-link {
            color: #FF6F61; /* Coral */
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding-top: 40px;
        }

        .top-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .top-actions h1 {
                margin: 0;
            }

        .event-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }

        /* Red Delete Button */
        .btn-danger {
            background-color: #FF4C4C; /* Red */
            color: white;
            font-weight: bold;
        }

            .btn-danger:hover {
                background-color: #E33E3E; /* Darker Red */
            }

        /* Navy Blue for Details Button */
        .btn-details {
            background-color: #1A4C7B; /* Navy Blue */
            color: white;
            font-weight: bold;
        }

            .btn-details:hover {
                background-color: #0C2D57; /* Darker Navy Blue */
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="top-actions">
            <h1>All Events</h1>
            <a asp-action="Create" class="btn btn-primary">+ Create New Event</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageFileName))
                            {
                                <img src="~/event-images/@item.ImageFileName" alt="Event Image" class="event-image" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>@item.Title</td>
                        <td>@item.EventDateTime.ToString("g")</td>
                        <td>@item.Location</td>
                        <td>$@item.Price</td>
                        <td>@item.Category?.Title</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-details">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
