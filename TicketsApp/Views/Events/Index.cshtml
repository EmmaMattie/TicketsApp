@model IEnumerable<TicketsApp.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #F3D9E5; /* Pale Pink */
            color: #4A3267; /* Purple */
            font-family: 'Arial', sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 40px;
            font-weight: bold;
        }

        .table {
            background-color: #F7B9D4; /* Light Pink */
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #4A3267; /* Purple */
            color: white;
        }

        td {
            vertical-align: middle;
        }

        .btn {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #DE638A; /* Pink */
            border: none;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #4A3267;
            }

        .btn-link {
            color: #4A3267;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            padding-top: 40px;
        }

        .top-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .top-actions h1 {
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="top-actions">
            <h1>All Events</h1>
            <a asp-action="Create" class="btn btn-primary">+ Create New Event</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.EventDateTime.ToString("g")</td>
                        <td>@item.Location</td>
                        <td>$@item.Price</td>
                        <td>@item.Category?.Title</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
