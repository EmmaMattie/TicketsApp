@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Body styling */
        body {
            font-family: 'Arial', sans-serif; /* Clean, readable font */
            background-color: #F4F7F6; /* Light background for a soft appearance */
            color: #1A4C7B; /* Navy Blue text for consistency with brand colors */
            margin: 0;
        }

        /* Page Title Styling */
        h1 {
            font-size: 2.5rem; /* Larger text for the title */
            font-weight: bold;
            color: #1A4C7B; /* Navy Blue to match the site's theme */
            text-align: center; /* Center the title */
            margin-top: 30px; /* Space above the title */
        }

        /* Paragraph Styling */
        p {
            font-size: 1.1rem; /* Slightly larger text for readability */
            line-height: 1.6; /* Increased line height for easy reading */
            margin: 20px 0; /* Space between paragraphs */
            max-width: 900px; /* Limiting width for better line length */
            margin-left: auto; /* Centering the text block */
            margin-right: auto; /* Centering the text block */
        }

        /* Container for content */
        .container {
            max-width: 1000px;
            padding: 30px; /* Add padding for spacing inside the container */
            background-color: white; /* White background for the content section */
            border-radius: 8px; /* Rounded corners for the content box */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow to elevate the content */
            margin-top: 40px; /* Space between the header and content */
        }

        /* Footer Styling */
        footer {
            background-color: #4ECDC4; /* Turquoise footer */
            color: #1A4C7B; /* Navy Blue for footer text */
            text-align: center;
            padding: 20px;
            margin-top: 40px; /* Space before footer */
            font-size: 1rem;
        }

    </style>
</head>
<body>

    <!-- Main Content Container -->
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <!-- Privacy Policy Text Section -->
        <p>
            Use this page to detail your site's privacy policy. Explain how user data is collected, stored, and used,
            what third parties might have access to this data, and any user rights related to their data.
        </p>
        <p>
            Ensure this section is clear and concise to help your users understand their privacy and security
            while using the platform.
        </p>
    </div>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2025 TicketsApp - All rights reserved</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
