@{
    ViewData["Title"] = "Confirmation";
}

<style>
    body {
        background-color: #f0f4ff;
    }

    .confirmation-box {
        margin-top: 60px;
        padding: 40px;
        background-color: #e0caff;
        border: 2px solid #cdb4db;
        border-radius: 16px;
        box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.05);
        text-align: center;
    }

        .confirmation-box h2 {
            color: #3c096c;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .confirmation-box p {
            font-size: 1.2rem;
            color: #333;
        }

        .confirmation-box a {
            margin-top: 25px;
            font-weight: bold;
        }
</style>

<div class="container">
    <div class="confirmation-box">
        <h2>🎉 Thank you for your purchase!</h2>
        <p>Your order has been confirmed. Enjoy the event!</p>
        <a href="/Browse" class="btn btn-outline-primary mt-3">Back to Events</a>
    </div>
</div>
