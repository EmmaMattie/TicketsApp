@model TicketsApp.Models.Category

@{
    ViewData["Title"] = "Edit Category";  // Setting the page title for editing category
}

@section Styles {
    <style>
        /* Styling for the page body */
        body {
            background-color: #E6F9F7; /* Light Teal */
            color: #FF6F61; /* Coral */
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }

        /* Header styling */
        h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 40px;
            font-size: 32px;
        }

        /* Main container styling for the form */
        .container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #A1D8D0; /* Teal */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(255, 111, 97, 0.2);
        }

        /* Form group styling */
        .form-group {
            margin-bottom: 20px;
        }

            /* Label styling within form groups */
            .form-group label {
                font-size: 18px;
                font-weight: bold;
                color: #FF6F61; /* Coral */
            }

        /* Input field styling */
        .form-control {
            padding: 12px;
            font-size: 16px;
            border: 1px solid #FF6F61;
            border-radius: 8px;
            width: 100%;
        }

            /* Focus effect on input fields */
            .form-control:focus {
                border-color: #E53A3A; /* Darker Coral */
            }

        /* Styling for the Save Changes button */
        .btn-primary {
            background-color: #FF6F61; /* Coral */
            color: white;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 18px;
            width: 100%;
            cursor: pointer;
        }

            /* Hover effect for the Save Changes button */
            .btn-primary:hover {
                background-color: #E53A3A; /* Darker Coral */
            }

        /* Styling for the back link button */
        .mt-3 a {
            color: #FF6F61;
            font-weight: bold;
            text-decoration: none;
            font-size: 18px;
        }

            /* Hover effect for the back link */
            .mt-3 a:hover {
                color: #E53A3A;
            }

        /* Styling for error messages */
        .text-danger {
            color: #D9534F; /* Red for errors */
        }
    </style>
}

<h1>Edit Category</h1>

<div class="container">
    <!-- Form to edit category details -->
    <form asp-action="Edit">
        <!-- Display validation summary for the model -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Hidden input to store the CategoryId for editing -->
        <input type="hidden" asp-for="CategoryId" />

        <!-- Form field for category title -->
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <!-- Display validation errors for the title -->
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Submit button to save the changes -->
        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </form>
</div>

<!-- Link to go back to the category list -->
<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        // Partial view for client-side validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
