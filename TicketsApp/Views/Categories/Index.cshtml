@model IEnumerable<TicketsApp.Models.Category>

@{
    ViewData["Title"] = "Category Index";  // Setting the page title to "Category Index"
}

@section Styles {
    <style>
        /* Styling for the page body */
        body {
            background-color: #FDF6EC; /* Light Pastel Peach */
            color: #444;
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }

        /* Header styling */
        h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 40px;
            font-size: 32px;
            color: #4B91F1; /* Soft Blue */
        }

        /* Main container styling for the category list */
        .container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #FFE7EC; /* Very Light Pink */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
        }

        /* Table styling */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
        }

            /* Styling for table headers */
            .table th, .table td {
                padding: 12px;
                text-align: left;
            }

            /* Header styling within the table */
            .table th {
                background-color: #C7E9F1; /* Soft Blue */
                color: #1A4C7B;
                font-weight: bold;
                font-size: 18px;
            }

            /* Row styling within the table */
            .table td {
                background-color: #FFFFFF;
                font-size: 16px;
                color: #333;
            }

        /* Styling for the "Create New" button */
        .btn-primary {
            background-color: #F7CAC9; /* Pastel Rose */
            color: #1A4C7B;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 18px;
            margin-bottom: 20px;
        }

            /* Hover effect for the button */
            .btn-primary:hover {
                background-color: #E6B8B7;
            }

        /* Action link styles */
        .action-edit {
            color: #FFA07A; /* Light Salmon */
        }

        .action-details {
            color: #B39EB5; /* Soft Lavender */
        }

        .action-delete {
            color: #87CEFA; /* Light Blue */
        }

        .table a {
            font-weight: bold;
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline;
            }
    </style>
}

<h1>Categories</h1>

<div class="container">
    <!-- Button to navigate to the Create page -->
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <!-- Table to display the list of categories -->
    <table class="table">
        <thead>
            <tr>
                <!-- Display category title column header -->
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <!-- Display actions column header -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Display category title for each item -->
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>
                        <!-- Links for editing, viewing details, or deleting a category -->
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="action-edit">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="action-details">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="action-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
