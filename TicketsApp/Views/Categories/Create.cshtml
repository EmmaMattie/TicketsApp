@model TicketsApp.Models.Category

@{
    ViewData["Title"] = "Create"; // Sets the title of the page to "Create"
}

@section Styles {
    <style>
        /* Page background and font settings */
        body {
            background-color: #F0F9FF; /* Very Light Blue */
            color: #FF6F61; /* Coral */
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }

        /* Title styling */
        h1 {
            text-align: center;
            color: #4B91F1; /* Soft Blue */
            font-weight: bold;
            margin-bottom: 40px;
            font-size: 32px;
        }

        /* Subtitle styling */
        h4 {
            color: #7A6FBE; /* Soft Purple */
            font-weight: bold;
            margin-bottom: 10px;
            font-size: 24px;
        }

        /* Container to center the form and apply styles */
        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #FFE7E9; /* Light Pastel Pink */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        }

        /* Form group for input fields */
        .form-group {
            margin-bottom: 25px;
        }

            /* Label styling */
            .form-group label {
                color: #3E3F5E; /* Soft Navy */
                font-weight: bold;
                font-size: 18px;
            }

        /* Input field styling */
        .form-control {
            background-color: #E0F7F4; /* Light Aqua */
            border: 1px solid #A1D8D0; /* Teal */
            border-radius: 8px;
            padding: 12px;
            font-size: 16px;
            color: #333;
            width: 100%;
            box-sizing: border-box;
        }

            /* Focused input field styling */
            .form-control:focus {
                border-color: #FF6F61; /* Coral */
                box-shadow: 0 0 6px rgba(255, 111, 97, 0.5); /* Coral Glow */
            }

        /* Submit button styling */
        .btn-primary {
            background-color: #B0D8FF; /* Light Blue */
            color: #1A4C7B;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 18px;
            width: 100%;
            cursor: pointer;
        }

            /* Hover effect for submit button */
            .btn-primary:hover {
                background-color: #94C3FF; /* Slightly deeper pastel blue */
            }

        /* Validation error message styling */
        .text-danger {
            color: #E53A3A; /* Darker Coral for validation */
            font-size: 14px;
        }

        /* Link styling for "Back to List" */
        .back-link {
            display: inline-block;
            margin-top: 30px;
            color: #4B91F1; /* Blue */
            font-weight: bold;
            text-decoration: none;
            font-size: 18px;
        }

            /* Hover effect for "Back to List" link */
            .back-link:hover {
                color: #FF6F61; /* Coral */
            }
    </style>
}

<h1>Create</h1> <!-- Main title for the page -->

<h4>Category</h4> <!-- Subtitle for the category creation form -->
<hr /> <!-- Horizontal line -->

<div class="container">
    <!-- Main container for the form -->
    <div class="row">
        <div class="col-md-12">
            <!-- Form to create a new category -->
            <form asp-action="Create">
                <!-- Validation summary will display errors if the model validation fails -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Input field for the category title -->
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label> <!-- Label for the Title field -->
                    <input asp-for="Title" class="form-control" /> <!-- Input field for category title -->
                    <!-- Display validation error message for the Title field -->
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Submit button to create the category -->
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" /> <!-- Submit button -->
                </div>
            </form>
        </div>
    </div>

    <!-- Link to navigate back to the list of categories -->
    <div>
        <a asp-action="Index" class="back-link">Back to List</a> <!-- Back to list link -->
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <!-- Includes client-side validation scripts -->
    }
}
