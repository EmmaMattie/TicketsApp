@model TicketsApp.Models.Category

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        /* Basic styling for the body of the page */
        body {
            background-color: #FDF6EC; /* Light Pastel Peach */
            color: #FF6F61; /* Coral */
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }

        /* Header and sub-header styling */
        h1, h3 {
            text-align: center;
            color: #C95D63; /* Muted Coral */
            font-weight: bold;
            margin-bottom: 20px;
            font-size: 28px;
        }

        /* Container to wrap the content and make it look neat */
        .container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #FFE7EC; /* Very Light Pink */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
        }

        /* Styling for the definition list displaying the Category details */
        dl dt {
            font-weight: bold;
            color: #4B91F1; /* Soft Blue */
            font-size: 18px;
        }

        dl dd {
            color: #333;
            font-size: 18px;
        }

        /* Button styling for the Delete button */
        .btn-danger {
            background-color: #FFA8A8; /* Pastel Coral */
            color: #1A4C7B;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
        }

            /* Hover effect for the Delete button */
            .btn-danger:hover {
                background-color: #FF6F61; /* Coral */
            }

        /* Styling for the Back button */
        .btn-back {
            background-color: #BFD8FF; /* Soft Blue */
            color: #1A4C7B;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }

            /* Hover effect for the Back button */
            .btn-back:hover {
                background-color: #94C3FF;
            }
    </style>
}

<!-- Main title for the Delete page -->
<h1>Delete</h1>

<!-- Subheading asking for confirmation -->
<h3>Are you sure you want to delete this?</h3>

<div class="container">
    <!-- Category section showing the details of the item being deleted -->
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <!-- Label displaying the name of the category -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <!-- Value displaying the title of the category -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <!-- Form to confirm the deletion of the category -->
    <form asp-action="Delete">
        <!-- Hidden input holding the CategoryId to identify which category to delete -->
        <input type="hidden" asp-for="CategoryId" />
        <!-- Button to submit the form and delete the category -->
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <!-- Link to go back to the list of categories -->
    <div>
        <a class="btn-back" asp-action="Index">Back to List</a>
    </div>
</div>
