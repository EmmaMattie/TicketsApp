@model TicketsApp.Models.Category

@{
    ViewData["Title"] = "Details";  // Setting the page title for the details view
}

@section Styles {
    <style>
        /* Basic styling for the page body */
        body {
            background-color: #E6F9F7; /* Light Teal */
            color: #FF6F61; /* Coral */
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }

        /* Header styling */
        h1 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 40px;
            font-size: 32px;
        }

        /* Styling for the main content container */
        .container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #A1D8D0; /* Teal */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(255, 111, 97, 0.2);
        }

        /* Styling for the definition list label */
        dl dt {
            font-weight: bold;
            font-size: 18px;
            color: #FF6F61; /* Coral */
        }

        /* Styling for the definition list value */
        dl dd {
            font-size: 18px;
            color: #333;
        }

        /* Button styling for the Back button */
        .btn-back {
            background-color: #FF6F61; /* Coral */
            color: white;
            font-weight: bold;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 18px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }

            /* Hover effect for the Back button */
            .btn-back:hover {
                background-color: #E53A3A; /* Darker Coral */
            }
    </style>
}

<!-- Main header for the Category Details page -->
<h1>Category Details</h1>

<div class="container">
    <h4>Category</h4>
    <hr />
    <!-- Definition list to display category details -->
    <dl class="row">
        <!-- Label for the category title -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <!-- Display the category title value -->
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <!-- Back button to navigate to the category list -->
    <div>
        <a class="btn-back" asp-action="Index">Back to List</a>
    </div>
</div>
